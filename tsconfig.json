{
  "compilerOptions": {
    "target": "es2020",
    "module": "commonjs",
    "strict": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "outDir": "./dist",
    "types": ["node", "hardhat"]
  },
  "include": ["./scripts", "./test", "./typechain", "./tasks", "./hardhat.config.ts"],
  "exclude": ["node_modules"]
}
